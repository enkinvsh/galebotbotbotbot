{
  "name": "gallery-bot",
  "version": "1.0.0",
  "description": "Telegram Mini App for Gallery Way exhibition bookings",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:migrate": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql"
  },
  "keywords": ["telegram", "mini-app", "booking", "gallery"],
  "author": "Gallery Way",
  "license": "UNLICENSED"
}
